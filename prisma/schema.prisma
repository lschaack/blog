generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model ExquisiteCorpseGame {
  id        String   @id @default(uuid()) @db.Uuid
  data      Json     @map("data") @db.JsonB
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("exquisite_corpse_games")
  @@index([data], type: Gin)
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model ExquisiteCorpseTrainingExample {
  id                String                              @id @default(uuid()) @db.Uuid
  paths             Json                                @db.JsonB
  sketchDescription String                              @map("sketch_description")
  turnDescription   String                              @map("turn_description")
  createdAt         DateTime                            @default(now()) @map("created_at")
  updatedAt         DateTime                            @updatedAt @map("updated_at")
  tags              ExquisiteCorpseTrainingExampleTag[]

  @@map("exquisite_corpse_training_examples")
}

model ExquisiteCorpseTag {
  id       String                              @id @default(uuid()) @db.Uuid
  name     String                              @unique
  examples ExquisiteCorpseTrainingExampleTag[]

  @@map("exquisite_corpse_tags")
}

model ExquisiteCorpseTrainingExampleTag {
  exampleId String                         @map("example_id") @db.Uuid
  tagId     String                         @map("tag_id") @db.Uuid
  example   ExquisiteCorpseTrainingExample @relation(fields: [exampleId], references: [id], onDelete: Cascade)
  tag       ExquisiteCorpseTag             @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([exampleId, tagId])
  @@map("exquisite_corpse_training_example_tags")
}
